@model List<mvcflowershoplab1.Models.Bike>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="color:red">Welcome to Bicycle Rental Service</h1>
    <div class="list-of-bicycle" style="border:solid 1px black">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Produced Date</th>
                    <th>Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bike in Model)
                {
                    <tr>
                        <td>@bike.BikeID</td>
                        <td>@bike.BikeName</td>
                        <td>@bike.BikeType</td>
                        <td>@bike.BikeProducedDate</td>
                        <td>@bike.BikePrice</td>
                        <td>
                            @if (!string.IsNullOrEmpty(bike.ImageKey))
                            {
                                string imageUrl = "https://" + ViewBag.BucketName + ".s3.amazonaws.com/" + bike.ImageKey;
                                <img src="@imageUrl" alt="Bicycle Image" width="100" height="100" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
