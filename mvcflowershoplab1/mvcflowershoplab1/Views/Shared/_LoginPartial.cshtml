@using Microsoft.AspNetCore.Identity
@using mvcflowershoplab1.Areas.Identity.Data

@inject SignInManager<mvcflowershoplab1User> SignInManager
@inject UserManager<mvcflowershoplab1User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="ReadMsgFromQueue" asp-controller="SQSExample"> Admin Reserve Dashboard</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Index" asp-controller="SQSExample"> Table Reserve Page</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Index" asp-controller="SNSExample"> Subscribe Newsletter</a>
        </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-action="Index" asp-controller="S3Example"> Upload Page</a>
    </li>
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-action ="Index" asp-controller = "FlowerList" id="FlowerList"> FlowerList Page</a>
     </li>
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
